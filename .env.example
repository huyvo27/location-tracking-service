# Application Configuration
APP_NAME=LOCAL TRACKING
APP_VERSION=1.0.0
APP_DESCRIPTION=LOCAL TRACKING SERVICE
APP_URL=http://localhost:8000
APP_DOCS_URL=/docs
API_PREFIX=

# Security
SECRET_KEY=your-secret-key-here
SECURITY_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_SECONDS=259200  # 3 days in seconds

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/app_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DB_DEBUG=False

# CORS Configuration
BACKEND_CORS_ORIGINS=*

# Logging Configuration
LOGGING_CONFIG_FILE=logging.ini

# Default Admin Credentials
DEFAULT_ADMIN_USERNAME=sys_admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=sys_admin

# Redis Configuration
REDIS_URLS=redis://localhost:6379
REDIS_MAX_CONNECTIONS=100

# Location Data
GROUP_LOCATION_TTL=600

# Enable/Disable .env file usage
USE_DOTENV=true